    <!-- Contact Section Begin -->
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="contact-title">
                        <h4>Contactanos</h4>
                        <p>Nuestro personal esta disponible para tus consultas, acercate a nuestras tiendas fisicas para una atencion personalizada.</p>
                    </div>
                    <div class="contact-widget">
                        <div class="cw-item">
                            <div class="ci-icon">
                                <i class="ti-location-pin"></i>
                            </div>
                            <div class="ci-text">
                                <span>Direccion:</span>
                                <p>Av. Luis Maria Campos 1400, CABA. Argentina</p>
                            </div>
                        </div>
                        <div class="cw-item">
                            <div class="ci-icon">
                                <i class="ti-mobile"></i>
                            </div>
                            <div class="ci-text">
                                <span>Telefono:</span>
                                <p>+54 11 1234 5647</p>
                            </div>
                        </div>
                        <div class="cw-item">
                            <div class="ci-icon">
                                <i class="ti-email"></i>
                            </div>
                            <div class="ci-text">
                                <span>Email:</span>
                                <p>ifit_argentina@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1">
                    <div class="contact-form">
                        <div class="leave-comment">
                            <h4>Dejanos tu comentario</h4>
                            <p>Nuestro equipo respondera tu consulta a la brevedad.</p>
                            <form action="/contact" method="POST" class="comment-form">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <input type="text" placeholder="Ingresa tu nombre" id="name" name="nombre">
                                    </div>
                                    <div class="col-lg-6">
                                        <input type="text" required placeholder="Ingresa tu email" id="email" name="email">
                                    </div>
                                    <div class="col-lg-12">
                                        <textarea placeholder="Ingresa tu mensaje" id="mensaje" name="mensaje"></textarea>
                                        <button type="submit" class="site-btn btn-block">Enviar</button>
                                    </div>
                                </div>
                                <h5 class="text-success text-center">{{message}}</h5>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Imagen</th>
                                    <th class="p-name">Producto</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Total</th>
                                    <th><i class="ti-close"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each carrito}}
                                <tr>
                                    <td class="cart-pic first-row"><img src="{{imagen_producto}}" alt=""></td>
                                    <td class="cart-title first-row">
                                        <h5>{{nombre_producto}}</h5>
                                    </td>
                                    <td class="p-price first-row">ARS ${{precio}}</td>
                                    <td class="qua-col first-row">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="1">
                                            </div>
                                        </div>
                                    </td>
                                    <td><a href="/carrito/baja/{{id}}"></a></td>
                                    <!--<td class="total-price first-row">$60.00</td>-->
                                    <td class="close-td first-row"><i class="ti-close"></i></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    <li class="subtotal">Subtotal <span>$</span></li>
                                    <li class="cart-total">Total <span>$</span></li>
                                </ul>
                                <a href="#" class="proceed-btn">PROCEDER AL PAGO</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->

 